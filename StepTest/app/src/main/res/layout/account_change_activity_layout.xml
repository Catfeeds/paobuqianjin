<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_d9d9d9"
    android:orientation="vertical">

    <include layout="@layout/bar_return_a_style" />

    <TextView
        android:id="@+id/account_des"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"
        android:text="选择你要登录的账号"
        android:textColor="#666666"
        android:textSize="16dp" />

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/account_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f8">

    </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>

    <LinearLayout
        android:id="@+id/add_account"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_f8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="添加新账号"
            android:textColor="@color/color_161727"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/go_to" />
    </LinearLayout>
</LinearLayout>