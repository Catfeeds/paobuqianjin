<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/main_bottom"
        android:background="@color/color_8a8a8a" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_home_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/home_s"
                android:gravity="center"
                android:onClick="onTabSelect"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/home_page"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_friend_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/circle_n"
                android:gravity="center"
                android:onClick="onTabSelect"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/friend_circle"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/task_n"
                android:gravity="center"
                android:onClick="onTabSelect"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="任务"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_honor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/list_n"
                android:gravity="center"
                android:onClick="onTabSelect"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/try_ones"
                android:textSize="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_owner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/me_n"
                android:gravity="center"
                android:onClick="onTabSelect"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/owner_center"
                android:textSize="12dp" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom">

    </RelativeLayout>
</RelativeLayout>