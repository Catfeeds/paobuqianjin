<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context="com.paobuqianjin.pbq.step.view.activity.TransparentGuideActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_bottom">
        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_transparent_page1_a"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_home_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/home_s"
                android:gravity="center"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/home_page"
                android:textColor="@color/color_6c71c4"
                android:visibility="gone"
                android:textSize="12dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_shop_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/task_s"
                android:gravity="center"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="会话"
                android:textColor="@color/color_6c71c4"
                android:visibility="gone"
                android:textSize="12dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_shang_cheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/circle_s"
                android:gravity="center"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/friend_circle"
                android:visibility="gone"
                android:textColor="@color/color_6c71c4"
                android:textSize="12dp" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_conversion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/list_s"
                android:gravity="center"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/try_ones"
                android:visibility="gone"
                android:textColor="@color/color_6c71c4"
                android:textSize="12dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_owner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/me_s"
                android:gravity="center"
                android:paddingBottom="0dip"
                android:paddingTop="7dip"
                android:scaleType="matrix"
                android:text="@string/owner_center"
                android:visibility="gone"
                android:textColor="@color/color_6c71c4"
                android:textSize="12dp" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
