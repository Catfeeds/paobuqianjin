<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/free_dialog_bg">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bank_card_ico"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head_ico" />

        <RelativeLayout
            android:id="@+id/card_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bank_card_ico"
            android:layout_alignTop="@+id/bank_card_ico"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/bank_card_ico">

            <TextView
                android:id="@+id/bank_card_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="招商银行"
                android:textColor="@color/color_161727"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/card_style_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bank_card_from"
                android:text="储蓄卡"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/card_message"
            android:layout_marginBottom="18dp"
            android:text="**** **** **** 8813"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>