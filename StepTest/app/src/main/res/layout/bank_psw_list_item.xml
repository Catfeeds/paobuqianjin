<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/color_f8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bank_ico"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/bank_ico"
        android:text="招商银行"
        android:textColor="@color/color_161727" />

    <TextView
        android:id="@+id/card_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bank_name"
        android:text="储蓄卡"
        android:textColor="@color/color_161727" />

    <TextView
        android:id="@+id/card_last_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/card_style"
        android:text="(0000)"
        android:textColor="@color/color_161727" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:src="@drawable/go_to" />
</RelativeLayout>