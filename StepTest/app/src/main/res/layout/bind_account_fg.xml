<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bind_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f3f3f5">

    <include
        android:id="@+id/bar_add_from_address"
        layout="@layout/bar_return_a_style"></include>

    <RelativeLayout
        android:id="@+id/pass_word_layer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/bar_add_from_address"
        android:background="@color/color_f8">

        <ImageView
            android:id="@+id/address_mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/pass_manager" />

        <TextView
            android:id="@+id/phone_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/address_mail"
            android:text="修改密码"
            android:textColor="@color/color_161727"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/go_to" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/phone_address"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:background="@color/color_ebebed" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_phone_layer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/pass_word_layer"
        android:background="@color/color_f8">

        <ImageView
            android:id="@+id/account_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/phone_account" />

        <TextView
            android:id="@+id/phone_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/account_phone"
            android:text="手机号码"
            android:textColor="@color/color_161727"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/phone_chat_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/go_to_phone"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/go_to_phone"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/go_to" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/account_phone"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:background="@color/color_ebebed" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_weichat_layer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address_phone_layer"
        android:background="@color/color_f8">

        <ImageView
            android:id="@+id/address_weichat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/wechat_manager" />

        <TextView
            android:id="@+id/weichat_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/address_weichat"
            android:text="微信账号"
            android:textColor="@color/color_161727"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/we_chat_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/go_to_we_chat"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/go_to_we_chat"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/go_to" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/weichat_address"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:background="@color/color_ebebed" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qq_address_layer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/address_weichat_layer"
        android:background="@color/color_f8">

        <ImageView
            android:id="@+id/address_qq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/address_qq" />

        <TextView
            android:id="@+id/qq_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/address_qq"
            android:text="QQ账号"
            android:textColor="@color/color_161727"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/qq_chat_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/go_to_qq"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/go_to_qq"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/go_to" />
    </RelativeLayout>

</RelativeLayout>