<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_800000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/free_dialog_bg">

        <TextView
            android:id="@+id/bind_op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="是否取消绑定"
            android:textColor="@color/color_161727"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/cancel_confirm"
            android:background="@color/color_d9d9d9" />

        <LinearLayout
            android:id="@+id/cancel_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel_no"
                android:textColor="@color/color_6c71c4"
                android:textSize="15dp" />

            <ImageView
                android:layout_gravity="center"
                android:background="@color/color_d9d9d9"
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/confirm_yes"
                android:textColor="@color/color_6c71c4"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>