<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bind_wx_bar"
        layout="@layout/bar_return_a_style"></include>

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bind_wx_bar"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:text="手机号"
        android:textColor="@color/color_161727"
        android:textSize="15sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phone_text"
        android:layout_alignTop="@+id/phone_text"
        android:layout_toEndOf="@+id/phone_text"
        android:background="@null" />
    <ImageView
        android:layout_alignLeft="@+id/phone_text"
        android:layout_marginRight="25dp"
        android:background="@color/color_d9d9d9"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>