<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/circle_choose_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f6f6f6">

    <RelativeLayout
        android:id="@+id/circle_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp">

        <ImageView
            android:id="@+id/circle_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="63dp"
            android:background="#99000000">

            <TextView
                android:id="@+id/circle_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_f8"
                android:textSize="9dp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/circle_choose_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/circle_log"
        android:layout_toLeftOf="@+id/circle_join">

        <RelativeLayout
            android:id="@+id/circle_name_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxEms="8"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_161727"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/lock"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/circle_name"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/circle_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toEndOf="@+id/circle_name"
                android:src="@drawable/lock"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:id="@+id/circle_num_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_name_rel"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:text="成员500人"
            android:textColor="@color/color_161727"
            android:textSize="12dp" />
    </RelativeLayout>


    <Button
        android:id="@+id/circle_join"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/circle_log"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_four_dp"
        android:stateListAnimator="@null"
        android:text=""
        android:textColor="@color/color_6c71c4"
        android:textSize="10dp" />
</RelativeLayout>