<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context="com.paobuqianjin.pbq.step.view.activity.CircleGuideActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/circle_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:src="@mipmap/guide_v40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp"
                android:text="社群移到了这里"
                android:textColor="@color/color_f8"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="99dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/known_bts"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/button_guidea"
                    android:text="知道了"
                    android:textColor="@color/color_f8"
                    android:textSize="14dp" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/go_bt"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/button_guideb"
                    android:text="去看看"
                    android:textColor="@color/color_f8"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>