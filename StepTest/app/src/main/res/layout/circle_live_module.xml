<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/my_circles">

    <ImageView
        android:id="@+id/circle_live_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@color/color_f6f6f6" />

    <TextView
        android:id="@+id/circle_live_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_live_line"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="圈子活动"
        android:textColor="@color/color_161727"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/more_lives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circle_live_desc"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/circle_live_desc"
        android:layout_marginRight="14dp"
        android:text="查看更多"
        android:textColor="@color/color_8a8a8a"
        android:textSize="12dp" />

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_live_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:id="@+id/circle_live_default_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_live_a"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/hot_live" />

            <TextView
                android:id="@+id/live_a_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="跑步挑战"
                android:textColor="@color/color_f8"
                android:textSize="12dp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/circle_live_default_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_live_b"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/hot_livei" />

            <TextView
                android:id="@+id/live_b_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="计步挑战"
                android:textColor="@color/color_f8"
                android:textSize="12dp"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>