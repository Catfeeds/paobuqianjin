<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/circle_manager_list_id"
    android:layout_height="80dp">

    <ImageView
        android:visibility="gone"
        android:scaleType="centerCrop"
        android:id="@+id/select_user_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@drawable/circle_outline" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/member_head_icon_in_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toEndOf="@+id/select_user_icon"
        android:src="@drawable/logo" />

    <EditText
        android:visibility="visible"
        android:id="@+id/member_name_in_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@null"
        android:layout_toEndOf="@id/member_head_icon_in_circle"
        android:text=""
        android:enabled="false"
        android:maxLines="1"
        android:maxLength="32"
        android:textColor="@color/color_161727"
        android:textSize="15dp" />

    <TextView
        android:visibility="visible"
        android:id="@+id/admin_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/member_name_in_circle"
        android:background="@color/color_6c71c4"
        android:text=""
        android:textColor="@color/color_f8"
        android:textSize="12dp" />
    <ImageView
        android:layout_alignLeft="@+id/member_name_in_circle"
        android:layout_alignParentBottom="true"
        android:background="@color/color_d9d9d9"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>