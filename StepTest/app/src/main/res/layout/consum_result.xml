<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_800000">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rect_out_white_shape"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/tick_suc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="领取成功"
            android:textColor="@color/color_161727"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:background="#F4F4F4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:text="您可在我的-消费红包中查看。可用于到店消费，使用时点击立即使用会出示消费红包，满足消费红包使用条件，即可享受优惠。"
                android:textColor="#484848"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="消费红包是商家推送活动，与跑步钱进无关。"
                android:textColor="#DF4343"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/crash_button"
            android:stateListAnimator="@null"
            android:text="知道了"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>