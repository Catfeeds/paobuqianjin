<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_232433">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/bar_return_drawable"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/message_left"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:includeFontPadding="true"
                android:textColor="@color/color_f8"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/bar_right_drawable"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:padding="12dp"
                android:src="@drawable/message_left"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/midd"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/system_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/system_msg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/system_msg" />

                <com.paobuqianjin.pbq.step.view.base.view.DragPointView
                    android:id="@+id/tv_system_unread"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="系统消息"
                android:textColor="#ff111111"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/content_msg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/content_msg" />

                <com.paobuqianjin.pbq.step.view.base.view.DragPointView
                    android:id="@+id/tv_content_unread"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="评论"
                android:textColor="#ff111111"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/like_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/like_msg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/like_msg" />

                <com.paobuqianjin.pbq.step.view.base.view.DragPointView
                    android:id="@+id/tv_like_unread"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="赞"
                android:textColor="#ff111111"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/system_circle_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/cirlce_msg"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cirlce_msg" />

                <com.paobuqianjin.pbq.step.view.base.view.DragPointView
                    android:id="@+id/tv_circle_unread"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="社群"
                android:textColor="#ff111111"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/midd"
        android:background="@color/color_f9f9f9"
        android:layout_height="10dp"
        android:layout_width="match_parent"/>
</RelativeLayout>