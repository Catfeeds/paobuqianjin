        <RelativeLayout
            android:id="@+id/crash_span"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wechat_pay"
            android:layout_marginTop="20dp"
            android:background="@color/color_f8">

            <ImageView
                android:id="@+id/money_ico"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/crash_to" />

            <EditText
                android:id="@+id/can_crash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/money_ico"
                android:background="@null"
                android:hint="提现金额10～30元"
                android:inputType="numberDecimal"
                android:textColorHint="@color/color_cbcacf"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/crash_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/can_crash"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/can_crash"
                android:layout_marginRight="14dp"
                android:text="全部提现"
                android:textColor="@color/color_6c71c4"
                android:textSize="17dp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/protocl_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/crash_span"
            android:background="@color/color_f8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/protocl_text"
                android:background="@color/color_ebebed" />

            <TextView
                android:id="@+id/protocl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="我已认真阅读《提现协议》"
                android:textColor="@color/color_161727"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/select_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/circle_outline" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
