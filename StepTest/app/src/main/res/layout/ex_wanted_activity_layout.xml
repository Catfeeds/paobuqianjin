<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8"
    android:orientation="vertical">

    <include layout="@layout/bar_return_a_style" />

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/want_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>

    <TextView
        android:id="@+id/not_found_data"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="您还没有任何收藏哟"
        android:textColor="@color/color_232433"
        android:textSize="15dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可能还喜欢"
            android:textColor="#fffd403f"
            android:textSize="15dp" />
    </LinearLayout>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/want_may_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

    </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>

    <LinearLayout
        android:id="@+id/delete_span"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/color_f8"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/all_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:background="@drawable/circle_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="全选"
            android:textColor="#ff666666"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/right_tv"
            android:layout_width="81dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:background="@drawable/ex_order_button_bg_red"
            android:gravity="center"
            android:text="删除"
            android:textColor="#fffb2003"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>