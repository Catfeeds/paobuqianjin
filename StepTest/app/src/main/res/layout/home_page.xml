<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home_page" />

    <FrameLayout
        android:id="@+id/process_step"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_below="@+id/home_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">

        <ImageView
            android:layout_width="184dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:src="@drawable/home_page_step_total" />

        <View
            android:id="@+id/process_step_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/home_page_log" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/toay_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="3689"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mu_biao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toay_step"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/mu_biao"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mu_biao_text"
                    android:layout_alignBottom="@+id/mu_biao_text"
                    android:layout_alignTop="@+id/mu_biao_text"
                    android:layout_toEndOf="@+id/mu_biao_text"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="10000步"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/toay_step"
                    android:layout_alignBottom="@+id/toay_step"
                    android:layout_alignTop="@+id/toay_step"
                    android:layout_toEndOf="@+id/toay_step"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="步"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/income_out_look"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/process_step"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp">

        <RelativeLayout
            android:id="@+id/today_income_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_toStartOf="@+id/line">

            <TextView
                android:id="@+id/income_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当天钱进"
                android:textColor="@color/color_f8"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/income_today"
                android:text="￥8.41元"
                android:textColor="@color/color_f8"
                android:textSize="18sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/today_income_span"
            android:layout_alignTop="@+id/today_income_span"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/color_a2a3a9" />

        <RelativeLayout
            android:id="@+id/month_income_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/line">

            <TextView
                android:id="@+id/income_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当月钱进"
                android:textColor="@color/color_f8"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/income_month">

                <ImageView
                    android:id="@+id/moth_income_ico"
                    android:layout_width="9dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/month_income" />

                <TextView
                    android:id="@+id/month_income_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/moth_income_ico"
                    android:text="88元"
                    android:textColor="@color/color_f8"
                    android:textSize="18sp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/major_span"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/wave_view_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.paobuqianjin.pbq.step.view.base.view.WaveView
                android:id="@+id/wave_view"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/wave_view"
                android:background="@color/color_f8"></RelativeLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/major_bg"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/wave_view_span"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_major" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="跑步钱进"
        android:textColor="@color/color_d6d6d6"
        android:textSize="23sp" />

    <RelativeLayout
        android:id="@+id/weather_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_title"
        android:layout_marginLeft="20dp"
        android:layout_toStartOf="@+id/home_title">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/weather_icon" />

        <TextView
            android:id="@+id/wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/weather_icon"
            android:layout_alignTop="@+id/weather_icon"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/weather_icon"
            android:gravity="center"
            android:text="25°"
            android:textColor="@color/color_f8"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_title"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_title"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="深圳"
        android:textColor="@color/color_f8"
        android:textSize="14sp" />
</RelativeLayout>
