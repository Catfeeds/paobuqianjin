<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home_page" />

    <FrameLayout
        android:id="@+id/process_step"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_below="@+id/home_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp">

        <ImageView
            android:layout_width="184dp"
            android:layout_height="184dp"
            android:layout_gravity="center"
            android:src="@drawable/home_page_step_total" />

        <View
            android:id="@+id/process_step_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/home_page_log" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/toay_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="3689"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mu_biao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toay_step"
                    android:layout_marginTop="0dp"
                    android:includeFontPadding="false"
                    android:text="@string/mu_biao"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mu_biao_text"
                    android:layout_alignBottom="@+id/mu_biao_text"
                    android:layout_alignTop="@+id/mu_biao_text"
                    android:layout_toEndOf="@+id/mu_biao_text"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="10000步"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/toay_step"
                    android:layout_alignBottom="@+id/toay_step"
                    android:layout_alignTop="@+id/toay_step"
                    android:layout_toEndOf="@+id/toay_step"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="步"
                    android:textColor="@color/color_ffc14c"
                    android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/major_span"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/wave_view_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.paobuqianjin.pbq.step.view.base.view.WaveView
                android:id="@+id/wave_view"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/wave_view"
                android:background="@color/color_f8"></RelativeLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/major_bg"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@+id/wave_view_span"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_major" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="跑步钱进"
        android:textColor="@color/color_d6d6d6"
        android:textSize="23sp" />

</RelativeLayout>
