<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page_v1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.paobuqianjin.pbq.step.view.base.view.BounceScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/moon_white_bg"
                    android:layout_width="match_parent"
                    android:layout_height="265dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/home_data_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/moon_white_bg"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日步数"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/toay_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/home_element_white"
                        android:gravity="center"
                        android:minWidth="67dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text=""
                        android:textColor="#4FADE4"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="今日步币"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/toay_step_dollor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/home_element_white"
                        android:gravity="center"
                        android:minWidth="67dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="#4FADE4"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="今日现金"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/today_income_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/home_element_white"
                        android:gravity="center"
                        android:minWidth="67dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text=""
                        android:textColor="#4FADE4"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/push_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/moon_white_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/push_red_pkg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/home_element_white"
                        android:gravity="center"
                        android:minWidth="67dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="发红包"
                        android:textColor="#4FADE4"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/history_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/home_element_white"
                        android:gravity="center"
                        android:minWidth="67dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="查记录"
                        android:textColor="#4FADE4"
                        android:textSize="20dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/red_pkg_sq"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="64dp"
                    android:layout_toEndOf="@+id/home_data_linear"
                    android:layout_toStartOf="@+id/push_rec">

                    <ImageView
                        android:id="@+id/dibiao"
                        android:layout_width="26dp"
                        android:layout_height="21dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/home_red"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/older_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">


                        <ImageView
                            android:id="@+id/older_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/older_red" />

                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/color_f8"
                            android:id="@+id/older_task_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@+id/older_img"
                            android:background="@drawable/home_task_bg"
                            android:gravity="center"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="长辈专享"
                        android:textColor="#818181"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/parent_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/parent_red" />

                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/color_f8"
                            android:id="@+id/parent_task_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@+id/parent_img"
                            android:background="@drawable/home_task_bg"
                            android:gravity="center"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="父母专享"
                        android:textColor="#818181"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/love_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/love_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/love_red" />

                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/color_f8"
                            android:id="@+id/love_task_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@+id/love_img"
                            android:background="@drawable/home_task_bg"
                            android:gravity="center"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="夫妻专享"
                        android:textColor="#818181"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/baby_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/baby_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/baby_red" />

                        <TextView
                            android:textSize="10dp"
                            android:textColor="@color/color_f8"
                            android:id="@+id/baby_task_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignRight="@+id/baby_img"
                            android:background="@drawable/home_task_bg"
                            android:gravity="center"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="孩子专享"
                        android:textColor="#818181"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/friend_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/friend_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/friend_red" />

                        <TextView
                            android:id="@+id/fiend_task_num"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:textSize="10dp"
                            android:textColor="@color/color_f8"
                            android:layout_alignRight="@+id/friend_img"
                            android:background="@drawable/home_task_bg"
                            android:gravity="center"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="朋友专享"
                        android:textColor="#818181"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_ad"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/color_f6f6f6"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/new_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/rect_angle"
                    android:text="@string/new_s"
                    android:textColor="@color/color_e4393c"
                    android:textSize="12dp" />

                <com.paobuqianjin.pbq.step.customview.LooperTextView
                    android:id="@+id/home_ad_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step_dollar_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingTop="14dp">

                <LinearLayout
                    android:id="@+id/linear_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="25dp"
                        android:text="走路有红包"
                        android:textColor="#939393"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/step_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="步币商城"
                        android:textColor="#FFA202"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/step_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:text="步币换商品"
                        android:textColor="#939393"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/rect_out_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tianmao"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/tianmao" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/jingdong"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/jingdong" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weipinghui"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/weipinhui" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/pingduoduo"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pinduoduo" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/mogu"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mogujie" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/banner_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/home_banner"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_f8"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

            <io.rong.imkit.model.RongGridView
                android:id="@+id/good_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_f6f6f6"
                android:gravity="center"
                android:horizontalSpacing="7dp"
                android:numColumns="auto_fit"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp">

            </io.rong.imkit.model.RongGridView>

            <TextView
                android:id="@+id/go_shoping_tv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_f6f6f6"
                android:gravity="center"
                android:textColor="@color/color_161727"
                android:textSize="14dp" />

        </LinearLayout>

    </com.paobuqianjin.pbq.step.view.base.view.BounceScrollView>

    <LinearLayout
        android:id="@+id/bar_home"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="跑步钱进"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/scan_mark_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/scan" />
    </LinearLayout>


    <ImageView
        android:id="@+id/shop_ping"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/center_line"
        android:layout_marginRight="14dp"
        android:layout_marginTop="350dp"
        android:scaleType="centerInside"
        android:src="@drawable/shop_ing" />
</RelativeLayout>