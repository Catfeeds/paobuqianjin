<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:src="@drawable/default_head_ico" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/user_head_icon">

        <TextView
            android:id="@+id/dear_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/invite_num_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dear_name"
            android:layout_marginTop="7dp"
            android:text="邀请了59个好友"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/income_read_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invite_num_des"
            android:layout_marginTop="7dp"
            android:text="收获红包6.90元"
            android:textColor="@color/color_ff3961"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/invite_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:text="第一名"
            android:textColor="@color/color_161727" />
    </RelativeLayout>
</RelativeLayout>