<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/glide_default_picture" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:layout_toLeftOf="@id/tv_money"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_alignTop="@+id/iv_icon" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/text_color_02"
        android:layout_toLeftOf="@id/tv_money"
        android:maxLines="1"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_below="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/tv_money"
        android:maxLines="1"
        android:textColor="@color/color_9e9e9e"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_below="@+id/tv_shop_name" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_name"
        android:text="TextView"
        android:textColor="@color/red0"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/iv_icon" />

    <TextView
        android:id="@+id/tv_limite_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_money"
        android:text="TextView"
        android:layout_marginRight="8dp"
        android:textColor="@color/color_9e9e9e" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_date"
        android:layout_alignParentEnd="true"
        android:background="@drawable/shape_14_dp_gray"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:minWidth="80dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/color_9e9e9e"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/color_9e9e9e"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toLeftOf="@id/tv_status"
        android:maxLines="1"
        android:layout_toRightOf="@+id/iv_icon" />

    <include
        layout="@layout/h_divide" />

</RelativeLayout>