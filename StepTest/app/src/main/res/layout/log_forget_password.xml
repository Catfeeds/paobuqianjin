<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bar_forget_password"
        layout="@layout/bar_return_a_style" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_forget_password"
        android:background="@drawable/forget_bg">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/coner_circle_text_view"
            android:gravity="center|left"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="@color/color_f8"
            android:textColorHint="@color/color_ccfffffff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/sign_code"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/phone"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/coner_circle_text_view"
            android:gravity="center|left"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="@color/color_f8"
            android:textColorHint="@color/color_ccfffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sign_code_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sign_code"
            android:layout_alignEnd="@+id/sign_code"
            android:layout_alignTop="@+id/sign_code"
            android:layout_below="@+id/phone"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:onClick="onTabLogin"
            android:text="获取验证码"
            android:textColor="@color/color_6c71c4"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/sign_code"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/coner_circle_text_view"
            android:gravity="center|left"
            android:hint="请输入新密码"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="@color/color_f8"
            android:textColorHint="@color/color_ccfffffff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/new_password"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/coner_circle_text_view"
            android:gravity="center|left"
            android:hint="再次输入新密码"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="@color/color_f8"
            android:textColorHint="@color/color_ccfffffff"
            android:textSize="12sp" />

        <Button
            android:stateListAnimator="@null"
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/confirm_password"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_f8"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>