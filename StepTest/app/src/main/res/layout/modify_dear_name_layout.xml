<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bar_modify_dear_name"
        layout="@layout/bar_return_a_style"></include>

    <EditText
        android:id="@+id/dear_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/bar_modify_dear_name"
        android:background="@null"
        android:hint="请输入昵称"
        android:maxLength="32"
        android:maxLines="1"
        android:paddingLeft="14dp"
        android:textColor="@color/color_161727"
        android:textSize="15dp" />
    <ImageView
        android:background="@color/color_d9d9d9"
        android:layout_below="@+id/dear_name"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</RelativeLayout>