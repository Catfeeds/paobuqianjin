<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/invite_pkg"
        android:layout_width="72dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/red_invite" />

    <LinearLayout
        android:id="@+id/invite_result_pan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_pkg"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_e4393c"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/invite_num_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invit_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/invite_nums"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_e4393c"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/invite_money_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invit_money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/money_invite"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invit_step_dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_e4393c"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/invite_step_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invit_step_dollar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/invite_step_dollor"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_result_pan"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="42dp"
        android:text="@string/invite_string"
        android:textColor="@color/color_161727"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/go_rule_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/invite_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请规则"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/invite_rule"
            android:layout_alignTop="@+id/invite_rule"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/invite_rule"
            android:scaleType="centerInside"
            android:src="@drawable/go_to" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invite_code_rel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/go_rule_span"
        android:layout_marginTop="20dp"
        android:background="@color/color_f6f6f6">

        <TextView
            android:id="@+id/invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_161727"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>