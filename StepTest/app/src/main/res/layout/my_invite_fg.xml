<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/invite_pkg"
        android:layout_width="72dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/red_invite" />

    <TextView
        android:id="@+id/invite_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_pkg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_161727"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_result"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="42dp"
        android:text="@string/invite_string"
        android:textColor="@color/color_161727"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/go_rule_span"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp">

        <TextView
            android:id="@+id/invite_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请规则"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/invite_rule"
            android:layout_alignTop="@+id/invite_rule"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/invite_rule"
            android:scaleType="centerInside"
            android:src="@drawable/go_to" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/invite_code_rel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/go_rule_span"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_f6f6f6">

        <TextView
            android:id="@+id/invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/color_161727"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>