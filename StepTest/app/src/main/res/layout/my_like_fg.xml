<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/bar_like_friend"
        layout="@layout/bar_return_a_style"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_like_friend">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/search_mem_bar"
                layout="@layout/serch_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"></include>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/like_friend_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_mem_bar">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>