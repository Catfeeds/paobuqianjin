<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/owner_circle_bar"
        layout="@layout/bar_return_a_style"></include>

    <ImageView
        android:id="@+id/qr_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/owner_circle_bar"
        android:scaleType="fitXY"
        android:src="@drawable/qr_code_bg" />

    <LinearLayout
        android:id="@+id/linear_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_circle_bar"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="跑步钱进"
            android:textColor="#FFDB7A"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="走路就能领红包的APP"
            android:textColor="#FFDB7A"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/qrcode_img"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/linear_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share_pan"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邀请好友下载注册"
            android:textColor="#FFDB7A"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="陆续就能得奖励30元"
            android:textColor="#FFDB7A"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_f8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="点击分享至"
                android:textColor="@color/color_f8"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_f8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_pan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text_share_text"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weixin_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/circle_friend" />

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/wet_char_ico" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/qq_ico" />
    </LinearLayout>

</RelativeLayout>