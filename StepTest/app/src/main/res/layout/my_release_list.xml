<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:text="五公里挑战赛"
            android:textColor="@color/color_161727"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/release_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_name"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/release_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_friend"
            android:layout_marginTop="12dp"
            android:text="任务天数：5天"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_days"
            android:layout_marginTop="20dp"
            android:background="@color/color_8a8a8a" />

        <Button
            android:id="@+id/release_details"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/release_detail_bg"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="任务详情"
            android:textColor="@color/color_6c71c4"
            android:textSize="14dp" />
    </RelativeLayout>
</RelativeLayout>