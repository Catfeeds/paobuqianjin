<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/color_161727"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/money_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/release_name"
            android:layout_alignTop="@+id/release_name"
            android:layout_marginRight="28dp"
            android:layout_toStartOf="@+id/release_details"
            android:gravity="center"
            android:text=""
            android:textColor="#FF0000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/release_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_name"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/release_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_friend"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/release_sponse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_days"
            android:layout_marginTop="12dp"
            android:text="店铺名称"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/release_sponse_name"
            android:layout_alignRight="@+id/release_details"
            android:layout_alignTop="@+id/release_sponse_name"
            android:layout_below="@+id/release_details"
            android:ellipsize="end"
            android:maxEms="16"
            android:maxLength="32"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_sponse_name"
            android:layout_marginTop="20dp"
            android:background="@color/color_d9d9d9" />

        <Button
            android:id="@+id/release_details"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/release_detail_bg"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="进行中"
            android:textColor="@color/color_232433"
            android:textSize="14dp" />
    </RelativeLayout>
</RelativeLayout>