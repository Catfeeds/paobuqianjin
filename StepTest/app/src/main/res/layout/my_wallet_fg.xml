<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bar_wallet_detail"
        layout="@layout/bar_return_b_style"></include>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_wallet_detail"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/income_rel"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/wallet_bg"></RelativeLayout>

        <LinearLayout
            android:id="@+id/income_outline"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="68dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_out_white_shape">

            <RelativeLayout
                android:id="@+id/total_span"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/money_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/total_income_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="#FFA311"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_income_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/total_income_num"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                        android:text="现金收益"
                        android:textColor="@color/color_6c71c4"
                        android:textSize="12dp" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/line_total"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_feb913" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/color_d9d9d9"
                android:layout_height="match_parent"></View>
            <RelativeLayout
                android:id="@+id/step_dollor_span"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/step_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/step_dollor_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="#FFA311"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/step_dollor_num_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/step_dollor_num"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:includeFontPadding="false"
                        android:text="步币收益"
                        android:textColor="@color/color_6c71c4"
                        android:textSize="12dp" />

                </LinearLayout>


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/line_current"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_feb913" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/income_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/income_outline">

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/charge_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/wallet_recharge_bg"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="充值"
            android:textColor="@color/color_161727"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>