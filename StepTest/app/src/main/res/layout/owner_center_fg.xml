<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.paobuqianjin.pbq.step.view.base.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffededed"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="@drawable/owner_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/qrcode_rel"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:id="@+id/qr_linear"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/qrcode"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/owner_qr" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/setting_span"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_toRightOf="@+id/qr_linear"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/setting_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_toEndOf="@+id/qrcode"
                                android:padding="4dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/setting_ico" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_span"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/user_icon"
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        android:layout_marginLeft="14dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/head_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/default_head_ico"></de.hdodenhof.circleimageview.CircleImageView>

                        <ImageView
                            android:id="@+id/sex"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignBottom="@+id/head_icon"
                            android:layout_alignEnd="@+id/head_icon"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:maxEms="8"
                                android:maxLength="8"
                                android:singleLine="true"
                                android:text="11111111111"
                                android:textColor="@color/color_f8"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/golden_sponsor"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:layout_toEndOf="@+id/dear_name"
                                android:scaleType="centerCrop"
                                android:src="@drawable/golden_big" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11111111111111"
                            android:textColor="@color/color_f8"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/crash_button"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/crash_button"
                        android:stateListAnimator="@null"
                        android:text="提现"
                        android:textColor="#fffb270b"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/wallet_span_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="钱包"
                                android:textColor="#fff4f4f4"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/wallet_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="#fff4f4f4"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/wallet_span_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="步币"
                                android:textColor="#fff4f4f4"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/wallet_step"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="#fff4f4f4"
                                android:textSize="16dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/color_f8"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/friend_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/friend"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/guanzhu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="关注好友"
                        android:textColor="#ff999999"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vip_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vip_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/vip_demo" />

                    <TextView
                        android:id="@+id/vip_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="会员"
                        android:textColor="#ff999999"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/circle_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/circle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shequn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="社群"
                        android:textColor="#ff999999"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_span"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dan_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dynamic" />

                    <TextView
                        android:id="@+id/dan_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="动态"
                        android:textColor="#ff999999"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_f8"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/invite_people_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/invite_people_ico"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/ivte_dic" />

                    <TextView
                        android:id="@+id/invite_people_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="@string/invite_people"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed" />

                <LinearLayout
                    android:id="@+id/money_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/money_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/money_more" />

                    <TextView
                        android:id="@+id/step_dollar_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="新手赚钱"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed" />

                <LinearLayout
                    android:id="@+id/his_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/his_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/lishi" />

                    <TextView
                        android:id="@+id/wallet_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="历史记录"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/gonggao_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/gonggao_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/icon_notice" />

                    <TextView
                        android:id="@+id/gonggao_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="公告通知"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed" />

                <LinearLayout
                    android:id="@+id/reward_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reward_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/choujiang" />

                    <TextView
                        android:id="@+id/reward_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="抽奖"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed" />

                <LinearLayout
                    android:id="@+id/collect_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/collect_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/collect_sponsor" />

                    <TextView
                        android:id="@+id/collect_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="收藏"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="#ffededed" />

                <LinearLayout
                    android:id="@+id/suggestion_span"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/color_f8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/suggestion_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/feedback" />

                    <TextView
                        android:id="@+id/suggestion_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="意见反馈"
                        android:textColor="@color/color_161727"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/more" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.paobuqianjin.pbq.step.view.base.view.BounceScrollView>
</LinearLayout>