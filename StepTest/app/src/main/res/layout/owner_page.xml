<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bar_owner_center"
        layout="@layout/bar_return_style_d"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_owner_center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_ebebed" />

            <RelativeLayout
                android:id="@+id/user_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:id="@+id/user_icon"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/women_back">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/head_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <ImageView
                        android:id="@+id/man_woman"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignBottom="@+id/head_icon"
                        android:layout_alignEnd="@+id/head_icon"
                        android:src="@drawable/girl" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_toRightOf="@+id/user_icon">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户昵称"
                        android:textColor="@color/color_161727"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name"
                        android:text="ID:123456"
                        android:textColor="@color/color_8a8a8a"
                        android:textSize="14sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/go_to_bar"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/more" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/line_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/user_span"
                android:layout_marginTop="8dp"
                android:background="@color/color_ebebed" />

            <RelativeLayout
                android:id="@+id/like_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/like_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="29"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/like_user"
                    android:layout_marginTop="8dp"
                    android:text="关注"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/fiends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="29"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fiends"
                    android:layout_marginTop="8dp"
                    android:text="好友"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/line_1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="55dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="29"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message"
                    android:layout_marginTop="8dp"
                    android:text="消息"
                    android:textColor="@color/color_8a8a8a"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/line_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/like_rel"
                android:layout_marginTop="12dp"
                android:background="@color/color_f3f3f5" />

            <RelativeLayout
                android:id="@+id/wallet_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/line_2">

                <ImageView
                    android:id="@+id/wallet_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/wallet_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/wallet_icon"
                    android:includeFontPadding="false"
                    android:text="我的钱包"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_wallet"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/wallet_desc"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_ebebed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/step_dollar_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/wallet_span">

                <ImageView
                    android:id="@+id/step_dollar_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/currency" />

                <TextView
                    android:id="@+id/step_dollar_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/step_dollar_icon"
                    android:includeFontPadding="false"
                    android:text="我的步币"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_step_dollar"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/step_dollar_desc"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_ebebed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gitf_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/step_dollar_span">

                <ImageView
                    android:id="@+id/gift_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/gift" />

                <TextView
                    android:id="@+id/gift_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/gift_icon"
                    android:includeFontPadding="false"
                    android:text="邀请有礼"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_gift"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/line_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/gitf_span"
                android:background="@color/color_f3f3f5" />


            <RelativeLayout
                android:id="@+id/dynamic_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/line_3">

                <ImageView
                    android:id="@+id/dynamic_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/dynamic" />

                <TextView
                    android:id="@+id/dynamic_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/dynamic_icon"
                    android:includeFontPadding="false"
                    android:text="我的动态"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_dymamic"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/dynamic_desc"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_ebebed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/circle_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/dynamic_span">

                <ImageView
                    android:id="@+id/circle_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/cirlce" />

                <TextView
                    android:id="@+id/cirlce_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/circle_icon"
                    android:includeFontPadding="false"
                    android:text="我的圈子"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_cirlce"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/cirlce_desc"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_ebebed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dan_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/circle_span">

                <ImageView
                    android:id="@+id/dan_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/dan" />

                <TextView
                    android:id="@+id/dan_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/dan_icon"
                    android:includeFontPadding="false"
                    android:text="我的段位"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_dan"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/line_4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/dan_span"
                android:background="@color/color_f3f3f5" />

            <RelativeLayout
                android:id="@+id/about_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/line_4">

                <ImageView
                    android:id="@+id/about_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/we" />

                <TextView
                    android:id="@+id/about_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/about_icon"
                    android:includeFontPadding="false"
                    android:text="关于我们"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_we"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/about_desc"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_ebebed" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/suggestion_span"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/about_span">

                <ImageView
                    android:id="@+id/suggestion_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/feedback" />

                <TextView
                    android:id="@+id/suggestion_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/suggestion_icon"
                    android:includeFontPadding="false"
                    android:text="意见反馈"
                    android:textColor="@color/color_161727"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/go_to_suggestion"
                    android:layout_width="14dp"
                    android:layout_height="17dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="14dp"
                    android:src="@drawable/go_to" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>