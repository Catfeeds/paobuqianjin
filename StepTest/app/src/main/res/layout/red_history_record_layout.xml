<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_d9d9d9"
    android:orientation="vertical">

    <include layout="@layout/bar_return_a_style"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/red_his_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_f8"
        app:tabIndicatorColor="@color/color_6c71c4"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/color_6c71c4"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceStyle_17"
        app:tabTextColor="@color/color_8a8a8a"></android.support.design.widget.TabLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-2dp"
        android:background="@color/color_8a8a8a" />

    <android.support.v4.view.ViewPager
        android:id="@+id/red_record_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>
</LinearLayout>