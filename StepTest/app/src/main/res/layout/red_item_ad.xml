<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/near_by_red"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_sponsor"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerInside" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/xu_xian">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/red_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/release_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:maxEms="8"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:text="快乐运动"
                        android:textColor="#FEF102"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/release_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/release_name"
                        android:layout_below="@+id/release_name"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/color_f8"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/release_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/color_f8"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/release_sponse_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxEms="13"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/color_f8"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/red_info"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:ellipsize="end"
                    android:maxEms="16"
                    android:maxLength="32"
                    android:text=""
                    android:textColor="@color/color_f8"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/red_info"
                    android:layout_marginRight="15dp"
                    android:text="鼓励全民运动·促进人类健康"
                    android:textColor="#B3EE786C"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/can_rec"
                    android:layout_width="75dp"
                    android:layout_height="27dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/red_process"
                    android:text=""
                    android:textColor="#E64434"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/can_not_rec"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/have_rec"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>