<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_800000">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/red_pkg_bg"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@drawable/red_pkg" />

        <ImageView
            android:id="@+id/cancel_red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/red_pkg_bg"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/read_pkg_close" />

        <TextView
            android:id="@+id/concla_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_red"
            android:layout_centerHorizontal="true"
            android:text="恭喜您获得"
            android:textColor="@color/color_f8ce95"
            android:textSize="12dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/open_red_pkg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/concla_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/op_button" />

        <TextView
            android:id="@+id/total_red_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text=""
            android:textColor="@color/color_f8ce95"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/concla_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="手慢了，商家红包已领完"
            android:textColor="@color/color_f8ce95"
            android:textSize="18dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/des_pkg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open_red_pkg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="赞助商家"
            android:textColor="@color/color_f8ce95"
            android:textSize="12dp"
            android:visibility="invisible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/red_pkg_recycler"
            android:layout_width="270dp"
            android:layout_height="265dp"
            android:layout_below="@+id/des_pkg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:overScrollMode="never"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>