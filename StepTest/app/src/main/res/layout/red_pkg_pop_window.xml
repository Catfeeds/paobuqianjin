<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_760000">


    <ImageView
        android:id="@+id/red_pkg_bg"
        android:layout_width="327dp"
        android:layout_height="465dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/red_pkg" />

    <RelativeLayout
        android:id="@+id/cancel_red_span"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/red_pkg_bg"
        android:layout_alignTop="@+id/red_pkg_bg"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/cancel_red"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/read_pkg_close" />
    </RelativeLayout>


    <TextView
        android:id="@+id/concla_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cancel_red_span"
        android:layout_centerHorizontal="true"
        android:text="恭喜您获得"
        android:textColor="@color/color_f8ce95"
        android:textSize="12dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/open_red_pkg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/concla_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/op_button" />

    <TextView
        android:id="@+id/total_red_pkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concla_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="@color/color_f8ce95"
        android:textSize="36dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/concla_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_f8ce95"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/des_pkg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_red_pkg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="赞助商家"
        android:textColor="@color/color_f8ce95"
        android:textSize="16dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/des_pkg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/red_pkg_color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sponsor_red_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left|center_vertical"
            android:maxEms="19"
            android:maxLines="1"
            android:textColor="@color/color_f88"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#E06C65" />

        <LinearLayout
            android:id="@+id/sponsor_linear"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sponsor_rel_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:maxEms="17"
                android:maxLines="1"
                android:textColor="@color/color_f88"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/go_withte" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#E06C65" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:text="详细地址:"
                android:textColor="@color/color_f88"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/address_detail"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="14dp"
                android:layout_weight="1"
                android:lineSpacingExtra="5dp"
                android:maxLines="3"
                android:textColor="@color/color_f88"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#E06C65" />

        <TextView
            android:id="@+id/sponsor_tel"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="left|center_vertical"
            android:maxEms="19"
            android:maxLines="1"
            android:textColor="@color/color_f88"
            android:textSize="14dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_go2be_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/red_pkg_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:padding="5dp"
        android:text="升级为会员，优先抢红包"
        android:textColor="@color/color_f8ce95"
        android:textSize="14dp" />
</RelativeLayout>