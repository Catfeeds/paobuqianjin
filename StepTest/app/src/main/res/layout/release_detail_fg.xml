<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/bar_release_detail"
        layout="@layout/bar_return_a_style" />

    <com.paobuqianjin.pbq.step.view.base.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar_release_detail">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/release_live_bg"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/release_bg" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/target_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_f8"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/target_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/target_step"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/color_f8"
                        android:textSize="15dp" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/release_sample_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release_live_bg"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:text="任务简介"
                android:textColor="@color/color_161727"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/release_target_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_sample_des"
                android:layout_below="@+id/release_sample_des"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/release_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_target_days"
                android:layout_below="@+id/release_target_days"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/release_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_target"
                android:layout_below="@+id/release_target"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/release_live_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_target_days"
                android:layout_below="@+id/release_total_money"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/release_live_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_target_days"
                android:layout_below="@+id/release_live_rules"
                android:layout_marginTop="10dp"
                android:text="任务说明:"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/num_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_target_days"
                android:layout_below="@+id/release_live_desc"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12dp" />

            <!--            <TextView
                            android:id="@+id/num_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/release_sample_des"
                            android:layout_below="@+id/num_1"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:text="A"
                            android:textColor="@color/color_8a8a8a"
                            android:textSize="12dp" />-->
            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/num_1"
                android:layout_marginTop="15dp"
                android:background="@color/color_f9f9f9" />

            <RelativeLayout
                android:id="@+id/task_days_span"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/release_sample_des"
                android:layout_below="@+id/line1">

                <TextView
                    android:id="@+id/task_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任务日期"
                    android:textColor="@color/color_161727"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/task_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/num_2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="领取状态"
                    android:textColor="@color/color_161727"
                    android:textSize="14dp" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/task_detail_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_days_span">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </com.paobuqianjin.pbq.step.view.base.view.BounceScrollView>
</RelativeLayout>