<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:text="五公里挑战赛"
            android:textColor="@color/color_161727"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/release_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_name"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/release_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_person"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/attach_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_days"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/attach_days"
            android:layout_marginTop="20dp"
            android:background="@color/color_d9d9d9" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/release_name"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/release_name"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/reply_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/release_days"
            android:layout_alignRight="@+id/time"
            android:layout_alignTop="@+id/release_days"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/recv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/attach_days"
            android:layout_alignRight="@+id/time"
            android:layout_alignTop="@+id/attach_days"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>