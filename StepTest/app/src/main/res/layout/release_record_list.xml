<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/release_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:text="五公里挑战赛"
            android:textColor="@color/color_161727"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/release_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_name"
            android:layout_marginTop="12dp"
            android:text="奖励总金额：￥50.00"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/release_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_money"
            android:layout_marginTop="12dp"
            android:text="任务天数：5天"
            android:textColor="@color/color_8a8a8a"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/release_name"
            android:layout_below="@+id/release_days"
            android:layout_marginTop="20dp"
            android:background="@color/color_8a8a8a" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp">

            <TextView
                android:gravity="right"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/01/23"
                android:textColor="@color/color_8a8a8a"
                android:textSize="12sp" />

            <TextView
                android:layout_alignRight="@+id/time"
                android:layout_below="@+id/time"
                android:layout_marginTop="24dp"
                android:text="￥50.00"
                android:textSize="16sp"
                android:textColor="@color/color_e4393c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>