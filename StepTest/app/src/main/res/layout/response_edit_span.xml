<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ebebed"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/edit_expression"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:background="@drawable/expression"
            android:stateListAnimator="@null"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/edit_expression"
            android:layout_toStartOf="@+id/send_content"
            android:layout_weight="1"
            android:background="@color/color_f8">

            <com.paobuqianjin.pbq.step.view.base.view.CustomEdit
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint=""
                android:inputType="textMultiLine" />
        </RelativeLayout>

        <Button
            android:id="@+id/send_content"
            android:layout_width="47dp"
            android:layout_height="28dp"
            android:layout_marginEnd="14dp"
            android:layout_centerVertical="true"
            android:background="@color/color_6c71c4"
            android:stateListAnimator="@null"
            android:text="发送"
            android:textSize="12dp" />
    </LinearLayout>


    <com.paobuqianjin.pbq.step.view.emoji.EmotionLayout
        android:id="@+id/elEmotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>