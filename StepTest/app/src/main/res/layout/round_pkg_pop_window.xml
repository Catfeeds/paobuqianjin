<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_760000">

    <ImageView
        android:id="@+id/red_pkg_bg"
        android:layout_width="327dp"
        android:layout_height="465dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/round_pkg" />

    <RelativeLayout
        android:id="@+id/cancel_red_span"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/red_pkg_bg"
        android:layout_alignTop="@+id/red_pkg_bg"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/cancel_red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/read_pkg_close" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/round_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/cancel_red_span"
        android:layout_centerHorizontal="true"
        android:src="@drawable/round_loho" />

    <TextView
        android:id="@+id/des_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/round_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="牵手跑步钱进"
        android:textColor="#F4CE57"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/des_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/des_a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="500万人都在用的精准引流神器"
        android:textColor="#F4CE57"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/round_open"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/des_b"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:src="@drawable/op_button" />

    <TextView
        android:id="@+id/des_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/red_pkg_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="8dp"
        android:text="天天有红包 邀请推荐下载得30元"
        android:textColor="#F4CE57"
        android:textSize="15dp" />
</RelativeLayout>