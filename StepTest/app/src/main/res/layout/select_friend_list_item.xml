<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <ImageView
        android:id="@+id/select_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/dear_name"
        android:layout_marginStart="14dp"
        android:background="@drawable/circle_outline" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dear_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/select_icon"
        android:src="@drawable/default_head_ico" />

    <ImageView
        android:id="@+id/vip_flg"
        android:layout_width="27dp"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/dear_icon"
        android:layout_alignRight="@+id/dear_icon"
        android:scaleType="centerInside"
        android:paddingEnd="5dp"
        android:src="@drawable/vip_flg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dear_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/dear_icon"
        android:text="用户昵称"
        android:textColor="@color/color_161727"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/select_icon"
        android:layout_alignParentBottom="true"
        android:background="@color/color_ebebed" />
</RelativeLayout>