<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_recycler_fg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9">

    <include
        android:id="@+id/bar"
        layout="@layout/bar_return_a_style" />

    <com.paobuqianjin.pbq.step.view.base.view.BounceScrollView
        android:id="@+id/shop_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="155dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/color_232433"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_out_white_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="省钱购物直通车"
                            android:textColor="#ff111111"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="比直接登录天猫京东等最高省80%"
                            android:textColor="#ff999999"
                            android:textSize="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pingduoduo"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/pinduoduo" />

                            <TextView
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/quan_jian"
                                android:gravity="center"
                                android:text="最高省80%"
                                android:textColor="#fff4f4f4"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tianmao"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/tianmao" />

                            <TextView
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/quan_jian"
                                android:gravity="center"
                                android:text="最高省80%"
                                android:textColor="#fff4f4f4"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/jingdong"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/jingdong" />

                            <TextView
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/quan_jian"
                                android:gravity="center"
                                android:text="最高省80%"
                                android:textColor="#fff4f4f4"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/weipinghui"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/weipinhui" />

                            <TextView
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/quan_jian"
                                android:gravity="center"
                                android:text="最高省80%"
                                android:textColor="#fff4f4f4"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/mogu"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_horizontal"
                                android:scaleType="centerInside"
                                android:src="@drawable/mogujie" />

                            <TextView
                                android:layout_width="58dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/quan_jian"
                                android:gravity="center"
                                android:text="最高省80%"
                                android:textColor="#fff4f4f4"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <include
                layout="@layout/search_view_shop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ex_pintai_bar"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/zuo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="全网独一无二的准公益平台"
                            android:textColor="#ffab2d1d"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/you" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <io.rong.imkit.model.RongGridView
                android:id="@+id/good_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_f6f6f6"
                android:gravity="center"
                android:horizontalSpacing="7dp"
                android:nestedScrollingEnabled="false"
                android:numColumns="auto_fit"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="7dp"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp"></io.rong.imkit.model.RongGridView>
        </LinearLayout>
    </com.paobuqianjin.pbq.step.view.base.view.BounceScrollView>

    <ImageView
        android:id="@+id/release_goods"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="278dp"
        android:scaleType="centerInside"
        android:src="@drawable/release_goods" />
</RelativeLayout>