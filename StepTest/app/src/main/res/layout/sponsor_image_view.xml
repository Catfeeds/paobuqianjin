<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sponsor_env_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sponsor_env_img"
        android:layout_alignTop="@+id/sponsor_env_img"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/get_red"
                android:textColor="#F13A4A"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/red_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#F13A4A"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/into_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/put_in_wallet"
                android:textColor="@color/color_161727"
                android:textSize="12dp"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/circle_qr"
        android:layout_width="122dp"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:background="#80000000">

        <RelativeLayout
            android:id="@+id/qr_linear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@color/color_f8">

            <ImageView
                android:id="@+id/qrcode"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>