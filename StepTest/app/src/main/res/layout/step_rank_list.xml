<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_logo_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/default_head_ico" />

        <ImageView
	    android:id="@+id/vip_flg"
            android:layout_width="27dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@+id/circle_logo_search"
            android:layout_alignRight="@+id/circle_logo_search"
            android:scaleType="centerInside"
            android:paddingEnd="5dp"
            android:src="@drawable/vip_flg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/search_circle_des_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/circle_logo_search"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="用户昵称"
            android:textColor="@color/color_161727"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/love_number"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="8888步"
            android:textColor="@color/color_161727"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/search_circle_des_list_name"
            android:layout_alignParentBottom="true"
            android:background="@color/color_ebebed" />
    </RelativeLayout>
</RelativeLayout>