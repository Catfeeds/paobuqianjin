<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="176dp"></com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/part_one_span"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#FF0000"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/pic_1"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/part_for_span"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_4"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:background="@drawable/title_bg_w"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_f8"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/pic_4"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/part_two_span"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_2"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/title_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_f8"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/pic_2"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/part_three_span"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_3"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/title_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_f8"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/pic_3"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/part_fiv_span"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#FF0000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pic_5"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/part_six_span"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/title_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="#FF0000"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/pic_6"
                        android:layout_width="47dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:src="@drawable/hot_sales" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner"
                android:layout_weight="1">

            </android.support.design.widget.TabLayout>

            <ImageView
                android:id="@+id/more"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:src="@drawable/menu_age" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>

            <io.rong.imkit.model.RongGridView
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:numColumns="4"
                android:padding="8dp"
                android:scrollbars="none"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="16dp"
                android:id="@+id/more_grid_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/care_id_item">

            </io.rong.imkit.model.RongGridView>
        </FrameLayout>


    </LinearLayout>
</LinearLayout>