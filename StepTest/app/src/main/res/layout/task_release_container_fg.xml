<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_232433">

        <android.support.design.widget.TabLayout
            android:id="@+id/release_choice_tab"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            app:tabIndicatorColor="@color/color_feb913"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@color/color_feb913"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearanceStyle_17"
            app:tabTextColor="@color/color_f8" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/release_choice_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"></android.support.v4.view.ViewPager>
</RelativeLayout>