<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/color_232433">

        <android.support.design.widget.TabLayout
            android:id="@+id/release_choice_tab"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            app:tabIndicatorColor="@color/color_feb913"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@color/color_feb913"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearanceStyle_17"
            app:tabTextColor="@color/color_f8" />

        <RelativeLayout
            android:id="@+id/buttone_left_bar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/bar_return_drawable"
                android:layout_width="10dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:src="@drawable/bar_bg_selector" />
        </RelativeLayout>
    </RelativeLayout>

    <com.paobuqianjin.pbq.step.view.base.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@+id/bar"
        android:background="@color/color_f6f6f6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="140dp"></com.youth.banner.Banner>

            <android.support.v4.view.ViewPager
                android:id="@+id/release_choice_pager"
                android:layout_width="match_parent"
                android:layout_height="500dp"></android.support.v4.view.ViewPager>
        </LinearLayout>
    </com.paobuqianjin.pbq.step.view.base.view.BounceScrollView>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/create_button"
        android:stateListAnimator="@null"
        android:text="чбошод"
        android:textColor="@color/color_fefefe"
        android:textSize="16dp" />
</RelativeLayout>