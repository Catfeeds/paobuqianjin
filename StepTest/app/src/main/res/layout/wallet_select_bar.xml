<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bar_layout"
        android:background="@drawable/share_memanger" />

    <LinearLayout
        android:id="@+id/bar_layout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wallet_pay_manager"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="支付管理"
            android:textColor="@color/color_f8"
            android:textSize="14dp" />


        <ImageView
            android:layout_width="92dp"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:background="@color/color_8a8a8a" />

        <TextView
            android:id="@+id/wallet_my_bank"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="我的银行卡"
            android:textColor="@color/color_f8"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>